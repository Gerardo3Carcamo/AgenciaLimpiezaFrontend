{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": false, // Cambiado a false para desactivar las comprobaciones estrictas
    "noImplicitOverride": false, // Cambiado a false para permitir sobrescrituras implícitas
    "noPropertyAccessFromIndexSignature": false, // Cambiado a false para permitir el acceso a propiedades desde firmas de índice
    "noImplicitReturns": false, // Cambiado a false para permitir funciones sin un retorno explícito en todos los caminos
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": false, // Cambiado a false para desactivar la comprobación estricta de los parámetros de inyección
    "strictInputAccessModifiers": false, // Cambiado a false para desactivar la comprobación estricta de los modificadores de acceso de entrada
    "strictTemplates": false // Cambiado a false para desactivar las comprobaciones estrictas en las plantillas
  }
}
